@model yazlab3.Models.CustomerProductViewModel

<h1>Hoş Geldiniz, @Model.Customer.CustomerName</h1>
<p>Müşteri Türü: @Model.Customer.CustomerType</p>
<p>Bütçeniz: @Model.Customer.Budget TL</p>
<p>Toplam Harcamanız: @Model.Customer.TotalSpent TL</p>

<h2>Ürün Listesi</h2>
<table class="table">
    <thead>
        <tr>
            <th>Ürün Adı</th>
            <th>Stok</th>
            <th>Fiyat</th>
            <th>Sepete Ekle</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model.Products)
        {
            <tr>
                <td>@product.ProductName</td>
                <td>@product.Stock</td>
                <td>@product.Price TL</td>
                <td>
                    <form asp-action="AddToCart" asp-controller="Customers" method="post">
                        <input type="hidden" name="ProductID" value="@product.ProductID" />
                        <input type="number" name="Quantity" min="1" max="@product.Stock" required />
                        <button type="submit" class="btn btn-primary">Sepete Ekle</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="OrderStatus" class="btn btn-success mt-3">Sipariş Durumu</a>
